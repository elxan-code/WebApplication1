@model List<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 ">
            <a asp-area="admin" asp-controller="ProductsCategory" asp-action="Create" class="btn btn-primary">Create</a>
            <hr />
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Age</th>
                        <th scope="col">PositionId</th>

                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }

                    @foreach (var item in Model)
                    {

                        i++;
                    <tr>
                        <th scope="row">1</th>
                        <td><img src="~/Uploads/@item.Image" alt="Alternate Text" style="max-width:150px; max-height:150px" /></td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Age</td>
                        <td>@item.Position.Name</td>




                        <td>
                            <a asp-area="admin" asp-controller="ProductsCategory" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            <a asp-area="admin" asp-controller="ProductsCategory" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('deqiq silmey isdiyiren?')" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


